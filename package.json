{
  "name": "vscode-coolify",
  "displayName": "Coolify Deployments",
  "description": "Deploy, manage, and monitor Coolify applications, databases, and servers. Works in VS Code, Cursor, Trae, Windsurf, VSCodium, and any Open VSX-compatible editor.",
  "version": "2.3.0",
  "author": {
    "name": "Marko Tiosavljevic",
    "url": "https://imbamarketing.com"
  },
  "publisher": "ImbaMarketing",
  "icon": "public/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/magnetoid/Coolify-Deployments"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other",
    "Programming Languages",
    "Debuggers"
  ],
  "keywords": [
    "coolify",
    "deploy",
    "devops",
    "self-hosted",
    "docker",
    "server",
    "deployment",
    "open-vsx",
    "cursor",
    "windsurf",
    "trae"
  ],
  "sponsor": {
    "url": "https://github.com/sponsors/itsnitinr"
  },
  "activationEvents": [
    "onView:coolify-deployments"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "Requires a real network connection to a Coolify server (not supported in browser-based/virtual workspaces)."
    },
    "untrustedWorkspaces": {
      "supported": true,
      "description": "Coolify only makes outbound API calls to your server â€” it does not execute workspace code."
    }
  },
  "main": "./dist/extension.js",
  "contributes": {
    "authentication": [
      {
        "id": "coolify",
        "label": "Coolify"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coolify-sidebar",
          "title": "Coolify Deployments",
          "icon": "public/logo.svg"
        }
      ]
    },
    "views": {
      "coolify-sidebar": [
        {
          "id": "coolify-deployments",
          "name": "Coolify",
          "type": "tree",
          "icon": "public/logo.svg"
        }
      ]
    },
    "configuration": {
      "title": "Coolify",
      "properties": {
        "coolify.serverUrl": {
          "type": "string",
          "default": "",
          "description": "Your Coolify server URL (e.g. http://my-server:8000). Leave empty to use the interactive setup wizard."
        },
        "coolify.refreshInterval": {
          "type": "number",
          "default": 5000,
          "minimum": 2000,
          "description": "How often (in milliseconds) to poll Coolify for status updates. Default: 5000ms."
        },
        "coolify.defaultApplication": {
          "type": "string",
          "default": "",
          "description": "UUID of the application to pin to the Status Bar. Leave empty to show the first 2 apps."
        },
        "coolify.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show VS Code notification toasts when deployments complete or fail."
        }
      }
    },
    "keybindings": [
      {
        "command": "coolify.startDeployment",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "coolify.isConfigured"
      },
      {
        "command": "coolify.refreshApplications",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "coolify.isConfigured"
      },
      {
        "command": "coolify.viewApplicationLogs",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "coolify.isConfigured"
      },
      {
        "command": "coolify.cancelDeployment",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "coolify.isConfigured"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coolify.refreshApplications",
          "when": "view == coolify-deployments && coolify.isConfigured",
          "group": "navigation@1"
        },
        {
          "command": "coolify.reconfigure",
          "when": "view == coolify-deployments && coolify.isConfigured",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "coolify.startDeployment",
          "when": "view == coolify-deployments && viewItem =~ /^coolifyApp_/",
          "group": "inline@1"
        },
        {
          "command": "coolify.restartApplication",
          "when": "view == coolify-deployments && viewItem =~ /^coolifyApp_/",
          "group": "inline@2"
        },
        {
          "command": "coolify.viewApplicationLogs",
          "when": "view == coolify-deployments && viewItem =~ /^coolifyApp_/",
          "group": "inline@3"
        },
        {
          "command": "coolify.startApplication",
          "when": "view == coolify-deployments && viewItem == coolifyApp_stopped",
          "group": "coolify@1"
        },
        {
          "command": "coolify.stopApplication",
          "when": "view == coolify-deployments && viewItem == coolifyApp_running",
          "group": "coolify@2"
        },
        {
          "command": "coolify.restartApplication",
          "when": "view == coolify-deployments && viewItem =~ /^coolifyApp_/",
          "group": "coolify@3"
        },
        {
          "command": "coolify.cancelDeployment",
          "when": "view == coolify-deployments && viewItem == coolifyApp_deploying",
          "group": "coolify@4"
        },
        {
          "command": "coolify.startDatabase",
          "when": "view == coolify-deployments && viewItem == coolifyDatabase_stopped",
          "group": "inline@1"
        },
        {
          "command": "coolify.stopDatabase",
          "when": "view == coolify-deployments && viewItem == coolifyDatabase_running",
          "group": "inline@2"
        },
        {
          "command": "coolify.createDatabaseBackup",
          "when": "view == coolify-deployments && viewItem =~ /^coolifyDatabase_/",
          "group": "inline@3"
        },
        {
          "command": "coolify.openInBrowser",
          "when": "view == coolify-deployments && viewItem =~ /^coolifyApp_/",
          "group": "coolify@5"
        },
        {
          "command": "coolify.copyUuid",
          "when": "view == coolify-deployments && (viewItem =~ /^coolifyApp_/ || viewItem =~ /^coolifyDatabase_/)",
          "group": "coolify@6"
        }
      ]
    },
    "commands": [
      {
        "command": "coolify.configure",
        "title": "Coolify: Configure",
        "enablement": "!coolify.isConfigured"
      },
      {
        "command": "coolify.reconfigure",
        "title": "Coolify: Reconfigure",
        "enablement": "coolify.isConfigured",
        "icon": "$(settings-gear)"
      },
      {
        "command": "coolify.refreshApplications",
        "title": "Coolify: Refresh",
        "icon": "$(refresh)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.startDeployment",
        "title": "Coolify: Deploy",
        "icon": "$(rocket)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.cancelDeployment",
        "title": "Coolify: Cancel Deployment",
        "icon": "$(stop-circle)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.startApplication",
        "title": "Coolify: Start Application",
        "icon": "$(play)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.stopApplication",
        "title": "Coolify: Stop Application",
        "icon": "$(debug-stop)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.restartApplication",
        "title": "Coolify: Restart Application",
        "icon": "$(sync)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.viewApplicationLogs",
        "title": "Coolify: View Application Logs",
        "icon": "$(output)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.startDatabase",
        "title": "Coolify: Start Database",
        "icon": "$(play)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.stopDatabase",
        "title": "Coolify: Stop Database",
        "icon": "$(debug-stop)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.createDatabaseBackup",
        "title": "Coolify: Create Database Backup",
        "icon": "$(save)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.openInBrowser",
        "title": "Coolify: Open in Browser",
        "icon": "$(link-external)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.copyUuid",
        "title": "Coolify: Copy UUID",
        "icon": "$(clippy)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.quickDeploy",
        "title": "Coolify: Quick Deploy",
        "icon": "$(zap)",
        "enablement": "coolify.isConfigured"
      },
      {
        "command": "coolify.testConnection",
        "title": "Coolify: Test Connection",
        "icon": "$(plug)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js && node scripts/copy-templates.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production && node scripts/copy-templates.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}